    <body>
        <!-- main -->
        <div class="main-w3layouts wrapper">
            <h1>SignUp Form
            </h1>
            <div class="main-agileinfo">
                <div class="agileits-top">
                    <form action="/signup" name="consignup" class="bootstrap-form-with-validation" onSubmit="return validatePassword();" method="post">

                        <div class="form-group">
                            <input class="text" type="text" name="conid" value="<%=temp_cid%>" id="conid" disabled><br>
                            <i><strong>Note:This id should be used for login</strong></i>
                        </div>
                        <div>
                            <input type="hidden" name="cusid" id="cusid" value="<%=temp_cid%>">
                        </div>
                        <div class="form-group">
                            <input class="text" type="text" name="fname" placeholder="First-Name" pattern="[a-zA-Z ]{4,20}" id="fname" required=""><br>
                        </div>
                        <div class="form-group">
                            <input class="text" type="text" name="lname" placeholder="Last-Name" pattern="[a-zA-Z ]{2,10}" id="lname" required=""><br>
                        </div>
                        <div class="form-group">
                            <input class="text" type="text" name="address" placeholder="Address" pattern=".{5,30}" id="address" required=""><br>
                        </div>
                        <div class="form-group">
                            <input class="text" type="text" name="pincode" placeholder="Pincode" pattern="[0-9]{6}" title="Exact Six Digits" maxlength=6 required=""><br>
                        </div>
                        <div class="form-group">
                            <input class="text" type="text" name="mobile" placeholder="Mobile_no" id="cmno" pattern="[1-9]{1}[0-9]{9}" title="Exact Ten Digits" maxlength=10 required=""><br>
                        </div>

                        <div class="form-group">
                            <input class="text" type="email" name="email" placeholder="E-Mail" id="email" title="Enter Vaild Email" required=""><br>
                        </div>

                        <div class="form-group">
                            <input class="text" type="password" name="password" placeholder="Password" id="password" pattern=".{6,20}" title="Six or more characters" required maxlength=20 required="">
                        </div>

                        <div class="form-group">
                            <input class="text w3lpass" type="password" name="cpassword" placeholder="Confirm Password" id="cpass" title="Same as Password" required maxlength=16 required="">
                        </div>
                        <script>
                            var password = document.getElementById("password"),
                                confirm_password = document.getElementById("cpass");

                            function validatePassword() {
                                if (confirm_password.value != '')
                                    if (password.value != confirm_password.value) {
                                        alert("Passwords Don't Match");
                                        return false;
                                    } else {
                                        confirm_password.setCustomValidity('');
                                        return true;
                                    }

                            }

                            password.onblur = validatePassword;
                            confirm_password.onblur = validatePassword;
                        </script>

                        <div class="wthree-text">
                            <label class="anim">
							<input type="checkbox" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
                            <div class="clear"> </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit" name="ncon_sub">SignUp</button>
                            <br>
                            <p id='msg' class="text-danger"></p>
                        </div>
                    </form>



                    <p>Already have an Account? <a href="/userlogin"> Login Now!</a></p>
                </div>
            </div>
